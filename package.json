{
  "name": "shartjs",
  "version": "1.1.1",
  "description": "When your app crashes, it farts. That's it.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "farts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup",
    "test": "tsx test/test.ts",
    "release": "pnpm run build && pnpm publish --access public"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "fart",
    "crash",
    "error handling",
    "crash handling",
    "humor",
    "funny"
  ],
  "author": "Parth Koshti",
  "license": "MIT",
  "packageManager": "pnpm@10.12.2",
  "dependencies": {
    "chalk": "^5.4.1",
    "execa": "^9.6.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
