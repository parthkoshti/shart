{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // fine, tsup handles bundling
    "moduleResolution": "bundler", // needed for modern resolution
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true, // (added) better TS DX
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["test"] // (changed) exclude test files from build
}
